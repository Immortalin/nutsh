# Maintainer: Sebastian Morr <sebastian@morr.cc>

pkgname=nutsh
pkgver=20130715
pkgrel=1
pkgdesc="A framework for creating interactive command line tutorials"
arch=('x86_64' 'i686')
license=('GPL')
makedepends=('go')
options=('!strip' '!emptydirs')
_gourl='morr.cc/nutsh.git'

build() {
  cd "$srcdir"
  GOPATH="$srcdir" go get -fix -v -x ${_gourl}
}

package() {
  install -Dm755 "$srcdir/bin/$pkgname.git" "$pkgdir/usr/bin/$pkgname"
}

# vim:set ts=2 sw=2 et:
